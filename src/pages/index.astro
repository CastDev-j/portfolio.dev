---
import Layout from "../layouts/Layout.astro";
import Badge from "../components/Badge.astro";

import SocialPill from "../components/SocialPill.astro";

import GithubICon from "../components/icons/Github.astro";
import LinkedInICon from "../components/icons/LinkedIn.astro";
import MailICon from "../components/icons/Mail.astro";
import SpotifyIcon from "../components/icons/Spotify.astro";

import Experience from "../components/Experience.astro";
import Suitcase from "../components/icons/SuitCase.astro";
import Code from "../components/icons/Code.astro";

import SectionContainer from "../components/SectionContainer.astro";
import Proyects from "../components/Proyects.astro";
import PersonIcon from "../components/icons/Person.astro";
import Profile from "../components/Profile.astro";

---

<Layout title="Portfolio de cAndDev - Desarrollador y programador Web con 2 años de experiencia." description="Contrata a cAndDev para creación de aplicaciones">
  <main class="px-4">
    <SectionContainer class="py-48 pb-20" id="top">
      <img
        class="rounded-full size-12 mb-4"
        src="https://avatars.githubusercontent.com/u/103233568?v=4"
        alt="cAndDev photo"
      />
      <h1
        class="text-white text-3xl lg:text-5xl font-bold flex flex-row items-center gap-x-4 pb-4"
      >
        Hey, soy cAndDev <a
          href="https://www.linkedin.com/in/andres-castillo-jimenez-249210292/"
          target="_blank"
          rel="noopener"
          class="flex justify-center items-center"
          ><Badge>Disponible para trabajar</Badge></a
        >
      </h1>
      <h2 class=" text-xl lg:text-2xl text-wrap max-w-[700px]">
        <span class="text-white">2 años de experiencia. </span>
        <span class="text-indigo-200">Desarrollador Aplicaciones Web.</span>
        <span class="text-red-100">De Guanajuato, México.</span>
        <span class="opacity-70"
          >Especializado en crear entornos enfocados al Front-end.</span
        >
      </h2>
      <nav class="flex gap-3 lg:gap-8 my-4 flex-wrap">
			<SocialPill  href="https://www.linkedin.com/in/andres-castillo-jimenez-249210292/">
				<LinkedInICon class="size-4 md:size-6"/>
				LinkedIn
			</SocialPill>

			<SocialPill  href="https://github.com/cAndresDev">
				<GithubICon class="size-4 md:size-6"/>
				GitHub
			</SocialPill>

			<SocialPill href="https://open.spotify.com/user/213eau5yell4e5osern3fhnui">
				<SpotifyIcon class="size-4 md:size-6"/>
				Spotify
			</SocialPill>

			<SocialPill href="https://github.com/cAndresDev">
				<MailICon class="size-4 md:size-6" href="mailto:andres2004_cj@outlook.com"/>
				andres2004_cj@outlook.com
			</SocialPill>

      </nav>
	</SectionContainer>

	<SectionContainer class="py-0 " id="experiencia">
		<h2 class="text-2xl lg:text-4xl font-semibold mb-6 flex justify-start gap-x-4 items-center">
			<Suitcase class="size-7 opacity-50"/>
			Experiencia Laboral
		</h2>
		<Experience />
	</SectionContainer>

	<SectionContainer class="py-0 pt-20" id="proyectos">
		<h2 class="text-2xl lg:text-4xl font-semibold mb-6 flex justify-start gap-x-4 items-center">
			<Code class="size-7 opacity-50"/>
			Proyectos
		</h2>
		<Proyects />
	</SectionContainer>

	<SectionContainer class="py-0 pt-20" id="sobre-mi">
		<h2 class="text-2xl lg:text-4xl font-semibold mb-6 flex justify-start gap-x-4 items-center">
			<PersonIcon class="size-7 opacity-50"/>
			Sobre mi
		</h2>

		<Profile />
	</SectionContainer>

  </main>
</Layout>
